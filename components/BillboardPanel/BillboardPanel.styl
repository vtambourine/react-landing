@require('../variables');

.BillboardPanel {
    display: table;
    width: 100%;
    height: 100%;
    padding-top: 70px; // Compensate visual height of page header.

    text-align: center;
    color: #fff;
    background-color: green;
    background-image url('./background.jpg');
    background-size: cover;
    background-position: bottom center;
    background-repeat: no-repeat;

    @media (max-width: $small-screen) {
        padding-top: 64px;
    }

    &--content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
        padding: 0 30px;

        @media (max-width: $small-screen) {
            padding: 0 15px;
        }
    }

    &--title {
        font: 900 90px/1.2 'Maven Pro';
        display: flex;
        align-items: center;
        flex-grow: 2;
        max-width: 800px;
        text-transform: uppercase;
        color: #B70101;

        buf =,;
        for i in (-3..3) {
            for j in (-3..3) {
                push(buf, (i * 1px) (j * 1px) 0 #FFE761);
            }
        }
        shift(buf);
        shift(buf);

        text-shadow: buf

        @media (max-width: $small-screen) {
            font-size: 28px;
            margin-bottom: 1em;
        }
    }

    &--subtitle {
        font: 500 36px/1.2 'Maven Pro';
        flex-grow: 1;
        max-width: 650px;
        text-transform: uppercase;
        text-shadow: 3px 3px 4px rgba(0, 0, 0, 0.8);

        @media (max-width: $small-screen) {
            font-size: 22px;
            margin-bottom: 1.4em;
        }
    }
}
