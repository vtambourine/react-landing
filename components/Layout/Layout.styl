@require '../variables.styl';

html,
body {
    width: 100%;
    height: 100%;
    display: flex;
}

header() {

}

.Layout {
    position: relative;
    width: 100%;
    height: 100%;

    &--header {
        font-size: 14px;
        position: absolute;
        top: 0;
        width: 100%;
        text-align: center;
        color: #fff;

        @media (max-width: $medium-screen) {
            background-color: #fff;
        }

        &.-desktop {
            @media (max-width: $medium-screen) {
                display: none;
            }
        }

        &.-mobile {
            @media (min-width: $medium-screen + 1) {
                display: none;
            }
        }
    }

    &--headerRow {
        display: table;
        width: 100%;
        max-width: $max-width;
        margin: 0 auto;
        padding: 14px 30px;
    }

    &--headerItem {
        display: table-cell;
        vertical-align: middle;
        width: 25%;
        text-align: center;
    }

    &--profile {
        display: inline-block;
    }

    &--content {
        width: 100%;
        height: 100%;
        min-height: 540px;

        @media (max-width: $medium-screen) {
            min-height: 0;
        }
    }
}
