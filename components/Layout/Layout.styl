@require '../variables.styl';

* {
    box-sizing: border-box;
}

html,
body {
    font: 14px/1.4 "Helvetica Neue",Helvetica,Arial,sans-serif;
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
}

.Layout {
    position: relative;
    width: 100%;
    height: 100%;

    &--header {
        font-size: 14px;
        position: absolute;
        top: 0;
        width: 100%;
        text-align: center;
        color: #fff;

        @media (max-width: $small-screen) {
            background-color: #fff;
        }
    }

    &--content {
        width: 100%;
        height: 100%;

        @media (max-width: $small-screen) {
            min-height: 0;
        }
    }
}

.Layout-desktop {
    @extend .Layout;

    &--header {
        @media (max-width: $small-screen) {
            display: none;
        }
    }

    &--headerRow {
        display: flex;
        justify-content: flex-end;
        align-items: baseline;
        width: 100%;
        max-width: $max-width;
        margin: 0 auto;
        padding: 14px 30px;
    }

    &--headerItem {
        padding: 0 20px;
        text-align: center;
    }

    &--profile {
        display: inline-block;
    }
}

.Layout-mobile {
    @extend .Layout;

    &--header {
        @media (min-width: $small-screen + 1) {
            display: none;
        }

        padding: 20px 12px;
        color: #333;
        box-shadow: 0 5px 10px alpha(#000, 0.5);
    }

    &--drawerButton {
        $size = 48px;

        position: absolute;
        left: 0;
        bottom: 0;
        width: $size;
        height: $size;
        border-radius: $size;
        background-color: $green-color;
        cursor: pointer;

        &:hover {
            background-color: $highlighed-green-color;
        }
    }
}
